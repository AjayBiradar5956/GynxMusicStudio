<link rel="stylesheet" href="/css/mc.css">
<script src="/js/songs.js"></script>
<!-- Music Controller -->
<%if(info && locals.user){%>
    <center>
        <section class="mb-3">
            <audio src="<%=info.songAudioPath%>" class="mc-audioPlayer" autoplay></audio>
            <div class="mc-section">

                <!-- Song Details -->
                <div class="song-image-name">
                    <ul type="none">
                        <li>
                            <img src="<%=info.songImgPath%>" height="150px" width="150px" alt="" class="song-img">
                        </li>

                        <li class="mt-4 text-white" style="font-size: 1.9rem;">
                            <strong>
                                <%=info.name%>
                            </strong>
                        </li>
                    </ul>
                </div>

                <!-- Media Controls -->
                <div class="media-control">
                    <ul type="none" class="p-0 mediac">
                        <li class="mt-3">
                            <span style="font-size: 1.5rem; color: white;" class="mc-controllers">
                                <button><i class="fa-solid fa-info mt-3 info"></i></button>
                                <button><i class="fa-solid fa-arrow-rotate-left back"></i></button>
                                <button>
                                    <i class="fa-regular fa-circle-pause mc-pause" style="font-size: 2.2rem;">
                                    </i>
                                    <i class="fa-solid fa-play mc-play hide" style="font-size: 2.2rem;">
                                    </i>
                                </button>

                                <button><i class="fa-solid fa-arrow-rotate-right forward"></i></button>

                                <button><i class="fa-solid fa-stop stop"></i></button>
                            </span>
                        </li>
                        <li class="my-4 mc-bar">
                            <span class=" mx-3 text-white song-start">00:00</span>
                            <input type="range" min="1" max="100" value="20" style="width: 250px" id="song-range">
                            <span class=" mx-3 text-white song-end"></span>
                        </li>
                    </ul>
                </div>
                <center>
                    <div class="link-body">
                        <a href="/users/profile" class="card-link"><i class="fa-solid fa-house me-2"></i>Back Home</a>
                    </div>
                </center>
            </div>

        </section>
    </center>
    <%}%>