<link rel="stylesheet" href="/css/signin.css">
<div id="details">
    <div id="inner-div">
        <h1>Sign In</h1><br>
        <form action="/users/create-session" method="POST">
            <input type="email" name="email" placeholder="Your Email" required><br><br><br>
            <input type="password" name="password" placeholder="Password" required><br><br><br>
            <button type="submit">Login</button><br><br>
        </form>
        <p>
            <button id="google"><a href="/users/auth/google">
                    <i class="fa-brands fa-google"> &nbsp; <span>Sign In with Google</span></i></a></button>
        </p>
        <p style="margin-top: 50px;">Don't have an account? <a href="/users/sign-up">Sign Up</a></p>
    </div>
</div>